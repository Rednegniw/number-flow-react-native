    "price-ticker",
    "fintech",
    "dashboard",
    "internationalization",
    "i18n",
    "intl-numberformat",
    "spinning-numbers",
    "react-native-component",
    "number-formatting"
  ],
  "author": "Antonin Wingender",
  "license": "MIT",
  "homepage": "https://number-flow-react-native.awingender.com",
  "bugs": {
    "url": "https://github.com/Rednegniw/number-flow-react-native/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "bob build",
    "prepublishOnly": "tsc --noEmit && jest",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.73",
    "react-native-reanimated": ">=3.0.0"
